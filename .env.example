###########################
# Environment Variables
###########################

#--------------------------
## Docker Hub
#--------------------------

### Docker Hub username
DOCKER_HUB_USER_NAME=

### Docker Hub repository name
DOCKER_HUB_REP=

### Target platform for the container image (e.g., linux/amd64)
CONTAINER_IMAGE_PLATFORM=

#--------------------------
## Common Environment Variables
#--------------------------

### Suffix appended to the container name to ensure uniqueness
CONTAINER_NAME_SUFFIX=sample

### Explicit container IP address and port configuration
CONTAINER_IP=127.0.0.1
CONTAINER_PORT=

### Absolute host path used for volume mounting
HOST_PATH=

